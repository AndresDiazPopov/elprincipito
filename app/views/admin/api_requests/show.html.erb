<% content_for :title do %>
  <span><%= _('Detalles de la petición al API ') + @api_request.id.to_s %></span>
<% end %>

<div class="row animated fadeInRight">
  
  <div class="col-sm-8">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <div class="m-b-md">
          <h2><%= _('Petición al API') + ' ' + @api_request.id.to_s %>
          </h2>
        </div>
      </div>
      <div>
        <div class="ibox-content">
          <h3><%= _('Datos de la petición al API') %></h3>
          <dl class="dl-horizontal">
              <dt><%= _('Id') %></dt> <dd><%= @api_request.id.to_s %></dd>
              <%= render 'admin/shared/location/location_dt', locals: {latitude: @api_request.latitude, longitude: @api_request.longitude} %>
          </dl>

          <h3><%= _('Detalles') %></h3>
          <dl class="dl-horizontal">
              <dt><%= _('Path') %></dt> <dd><%= @api_request.path %></dd>
              <dt><%= _('Parámetros') %></dt> <dd><%= @api_request.params %></dd>
              <dt><%= _('Login') %></dt> <dd><%= !@api_request.login.nil? ? link_to(@api_request.login.id.to_s, admin_login_path(@api_request.login)) : '-' %></dd>
          </dl>

          <div class="hr-line-dashed"></div>
          <h3><%= _('Datos del usuario') %></h3>
          <dl class="dl-horizontal">
              <dt><%= _('Usuario') %></dt> <dd><%= !@api_request.user.nil? ? link_to(@api_request.user.email, admin_user_path(@api_request.user)) : '-' %></dd>
          </dl>

          <div class="hr-line-dashed"></div>
          <h3><%= _('Red') %></h3>
          <dl class="dl-horizontal">
              <dt><%= _('IP') %></dt> <dd><%= @api_request.ip || '-' %></dd>
              <dt><%= _('Red') %></dt> <dd><%= @api_request.network_type_string  %></dd>
              <dt><%= _('SSID') %></dt> <dd><%= @api_request.ssid || '-'  %></dd>
          </dl>

          <div class="hr-line-dashed"></div>
          <dl class="dl-horizontal">
              <dt><%= _('Fecha creación') %></dt> <dd><%= @api_request.created_at %></dd>
              <dt><%= _('Fecha modificación') %></dt> <dd><%= @api_request.updated_at %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

</div>