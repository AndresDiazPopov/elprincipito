<div class="row">

    <div class="col-md-12">
        
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <% if admin_user.new_record? %>
                    <h5><%= _('Nuevo administrador') %> <small><%= _('Completa los datos del nuevo administrador') %></small></h5>
                <% else %>
                    <h5><%= admin_user.email %> <small><%= _('Edita los datos del administrador') %></small></h5>
                <% end %>
                
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <div class="col-sm-12">
                        <%= form_for [:admin, admin_user] do |f| %>
                            <% if admin_user.errors.any? %>
                                <div class="alert alert-danger alert-dismissable">
                                    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
                                    <%= _('Hay algunos errores en el formulario:') %><br>
                                    <ul>
                                    <% admin_user.errors.full_messages.each do |error| %>
                                        <li>
                                            <%= error %>
                                        </li>
                                    <% end %>
                                    </ul>
                                </div>
                            <% end %>

                            <div class="row">
                              <%= render 'admin/shared/form/text_field', locals: {model: @admin_user, form_helper: f, field_name: :full_name, fa_icon: 'fa-user', field_label: _('Nombre completo'), type: :full_name, col: '6'} %>
                            </div>
                            
                            <div>
                                <%= f.submit _('Guardar'), class: 'btn btn-sm btn-primary pull-right m-t-n-xs', data: {disable_with: _('Enviando...')} %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>